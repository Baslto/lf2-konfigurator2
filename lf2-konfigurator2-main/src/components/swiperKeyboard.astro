<script>
  var swiper = new Swiper(".mySwiperKeyboard", {
    slidesPerView: 3,
    loop: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });

  let swiperK = document.getElementById("swiperK")
  let categoryContainer = document.getElementById("category-container")
  document.getElementById("arrowBack5").addEventListener("click", function(){
    swiperK.classList.toggle("hidden")
    categoryContainer.classList.toggle("hidden")
  })

  document.getElementById("keyboard").addEventListener("click", function() {
    swiperK.classList.toggle("hidden")
    categoryContainer.classList.toggle("hidden")
  })
</script>
