<script>
  var swiper = new Swiper(".mySwiperMouse", {
    slidesPerView: 3,
    loop: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });

  let swiperMouse = document.getElementById("swiperMouse")
  let categoryContainer = document.getElementById("category-container")
  document.getElementById("arrowBack6").addEventListener("click", function(){
    swiperMouse.classList.toggle("hidden")
    categoryContainer.classList.toggle("hidden")
  })

  document.getElementById("mouse").addEventListener("click", function() {
    swiperMouse.classList.toggle("hidden")
    categoryContainer.classList.toggle("hidden")
  })
</script>
